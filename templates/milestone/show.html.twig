{% extends 'base.html.twig' %}

{% block title %}Milestone{% endblock %}

{% block body %}
    <h1>Milestone</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ milestone.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
