{% extends 'base.html.twig' %}

{% block title %}Edit Project{% endblock %}

{% block body %}
    {{ include('project/_delete_form.html.twig') }}
    <div class="row w-100 m-auto justify-content-center">
        <div class="col-12 text-center my-2">
            <h1>Modifier un projet</h1>
        </div>
        <div class="col-xl-10 col-12 my-2">
            {{ include('project/_form.html.twig') }}
            <div class="col-12 text-end">
                <div class="btn-group">
                    <a class="btn btn-outline-primary" href="{{ path('app_project_index') }}">
                        <i class="fa fa-arrow-left"></i>
                        {{ 'common.back_to_list'|trans }}
                    </a>
                    <a class="btn btn-outline-danger" href="{{ path('app_project_delete', { id: project.id }) }}">
                        <i class="fa fa-trash"></i>
                        {{ 'common.delete'|trans }}
                    </a>
                    <button class="btn btn-outline-success" action="submit" form="project-form">
                        <i class="fa fa-save"></i>
                        {{ 'common.save'|trans }}
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
